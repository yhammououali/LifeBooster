{% extends '::base.html.twig' %}

{% block title %}
	{{ 'navbar.teacher'|trans }}
{% endblock %}

{% block action %}
	<a class="btn green" href="{{ path('lifebooster_front_teacher_create') }}"><i class="fa fa-plus"></i> {{ 'general.create'|trans }}</a>
{% endblock %}

{% block body %}
	<table class="dataTable lol table table-striped table-hover table-bordered table-condensed">
		<thead>
			<tr>
				<th>{{ 'teacher.civility'|trans }}</th>
				<th>{{ 'teacher.firstName'|trans }}</th>
				<th>{{ 'teacher.lastName'|trans }}</th>
				<th>{{ 'general.actions'|trans }}</th>
			</tr>
		</thead>
		<tbody>
			{% for teacher in teachers %}
				<tr>
					<td>{{ teacher.civility|trans }}</td>
					<td>{{ teacher.firstName }}</td>
					<td>{{ teacher.lastName }}</td>
					<td>
						<a href="{{ path('lifebooster_front_teacher_show', {'id': teacher.id}) }}" class="tooltips" data-original-title="Voir"><i class="fa fa-eye"></i></a>&nbsp;
						<a href="{{ path('lifebooster_front_teacher_edit', {'id': teacher.id}) }}" class="tooltips" data-original-title="Ã‰diter"><i class="fa fa-pencil"></i></a>&nbsp;
						<a href="{{ path('lifebooster_front_teacher_delete', {'id': teacher.id}) }}" class="tooltips" data-original-title="Supprimer"><i class="fa fa-trash-o"></i></a>&nbsp;
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}

